pipeline {
    agent any

    tools {
	 maven "MAVEN" 
	 jdk "JDK"
    }

    stages {	
	  stage('Initialize'){
		steps{
		    echo "PATH = /usr/bin/mvn/bin: ${PATH}"
		    echo "M2 HOME = /opt/maven"
		}
	  }
	  stage ('Build') {	
		steps {
		    dir("/var/lib/jenkins/workspace/new") {
		    "mvn clean install"
		    }
		}
	  }
    }
}
